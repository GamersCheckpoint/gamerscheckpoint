<div class="conte ">
    <section>
        <h4></h4>
        <form action="/agregarUsuario" method="post" class="form-register">
            <h4>REGISTRA TU PEDIDO </h4>
            <input class="controls" type="text" name="nombre" id="nombre" placeholder="Ingrese su Nombre" required>
            <input class="controls" type="text" name="apellido" id="apellido" placeholder="Ingrese su Apellido" required>
            <input class="controls" type="text" name="dni" id="dni" placeholder="Ingrese su Documento de Identidad" required>
            <input class="controls" type="text" name="producto" id="producto" placeholder="Nombre del Producto" required>
            <input class="controls" type="text" name="correo" id="correo" placeholder="Ingrese su Correo" required>
            <input class="controls" type="text" name="direccion" id="direccion" placeholder="Dirección de Entrega" required>
            <p style="font-size: medium;"> <input type="checkbox" required> Estoy de acuerdo con <a href="#">Terminos y condiciones</a></p>
            <input data-popup-target="#popup" class="botons" type="submit" value="Registrar">
            <div class="popup" id="popup">
                <div class="popup-header">
                    <div class="title">
                        <h3 style="color: black;">BUSCA TU DNI</h3>
                    </div>
                    <button data-close-button class="close-button">&times;</button>
                </div>
                <div class="popup-body">
                    <p style="color: black;">
                    BUSCA TU PEDIDO CON TU DNI
                    </p>
                </div>
                <div>
                <a href="registro"> <input class="botons" type="button" value="BUSCAR"></a>
                <a href="catalogo"> <input class="botons" type="button" value="SEGUIR COMPRANDO"></a>
                </div>
            </div>
            
        </form>
    
    </section>
    <div id="overlay"></div>
    <br>
    <section>
        <form action="/extraerDatosUsuario" method="post" class="form-busqueda">
            <h4>BUSCA  TU PEDIDO</h4>
            <form>
                <div class="mb-3">
                <label for="codigo" class="form-label">Tngresa tu Documento de Identidad</label>
                <input type="text" class="form-control" id="dni" name="dni" aria-placeholder="Ingresa tu código">
                <div class="mb-3 form-check">
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
                </div>
                <div class="textarea" style="width: 450px; height: 300px; background-color: #000032;">
                    <ul>
                    <% if(typeof datos !== 'undefined'){ %>
                        <% for (index in datos){ %>
                            <h2>Pedido de <%= datos[index].nombre %> <%= datos[index].apellido %></h2>
                            <li><p>CÓDIGO DE PEDIDO: <%= datos[index]._id %></p></li>
                            <li><p>PRODUCTO: <%= datos[index].producto %></p></li>
                            <li><p>EMAIL: <%= datos[index].correo %></p></li>
                            <li><p>DIRECCIÓN: <%= datos[index].direccion %></p></li>
                        <% } %>
                    <% } %>
                    </ul>
                </div>
        </form>
    </section>
